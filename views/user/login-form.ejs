<h1><%= title %></h1>
<form class="form" method="POST">
  <div class="form-group">
    <label for="username">Username:</label>
    <input id="username" name="username" type="email" placeholder="johndoe@example.com" required="true" value="<%= user===undefined ? '' : user.username %>">
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input id="password" name="password" type="password" placeholder="7ay93A@L" required="true">
  </div>
  <button type="submit"><%= title %></button>
</form>

<%- include("../errors", { errors }); %>